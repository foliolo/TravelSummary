<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="al.uax.ejercicio.tema3.travelsummary"
    xmlns:tools="http://schemas.android.com/tools" 
    tools:ignore="OldTargetApi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="15" />

     <uses-permission android:name="android.permission.READ_PHONE_STATE" />
     <uses-permission android:name="android.permission.RECEIVE_SMS" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/avion"
        android:label="@string/app_name_resumen_viaje"
        android:theme="@style/AppTheme" >
        <activity
            android:name="al.uax.ejercicio.tema3.travelsummary.TravelActivity"
            android:label="@string/app_name_resumen_viaje" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="al.uax.ejercicio.tema3.travelsummary.EditTravelActivity"
            android:label="@string/app_name_editar_viaje" >
        </activity>
    </application>

</manifest>
